@using NetCore_01.Models;
@model List<Pizza>

@if (Model.Count == 0) {
    <h3>Non ci sono Pizze da Visualizzare!</h3>
} else {


    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mt-3 mb-3">LISTA PIZZE</h1>
                </div>

                <table class="table post-list-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Immagine</th>
                            <th>Titolo</th>
                            <th>Descrizione</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza pizza in Model) {
                            <tr>
                                <td>@pizza.Id</td>
                                <td class="image"><img class="post-list-image" src="@pizza.Img"></td>
                                <td class="title">@pizza.Name</td>
                                <td class="description">@pizza.Description</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Details", "Pizza", new { id = @pizza.Id } )" role="button">Dettagli</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section OtherSection {

    <footer>
        <div class="container">
            <p>Footer</p>
        </div>
    </footer>
}